# ============================================================================
# RAILWAY PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================
# This file shows what environment variables to set in Railway dashboard
# DO NOT commit actual values - set them in Railway UI

# ============================================================================
# REQUIRED: Set these in Railway
# ============================================================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# Railway automatically sets PORT - don't override
# PORT will be set by Railway

# ============================================================================
# Application Settings - Production
# ============================================================================
APP_NAME=AI Email Assistant
DEBUG=false
LOG_LEVEL=WARNING
MAX_TOKENS=1000
TEMPERATURE=0.7
DONOTUSEGEMINI=false

# ============================================================================
# Security - CRITICAL: Generate new secrets for production
# ============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=generate_new_secret_key_for_production

# ============================================================================
# CORS - Update with your Railway frontend URL
# ============================================================================
CORS_ORIGINS=["https://your-frontend.railway.app","http://localhost:5173"]
ALLOWED_HOSTS=["your-backend.railway.app","localhost"]

# ============================================================================
# REDIS - Use Railway Redis Plugin
# ============================================================================
ENABLE_REDIS=true
# Railway provides REDIS_URL automatically when you add Redis service
# REDIS_URL will be automatically set by Railway Redis plugin
REDIS_MAX_CONNECTIONS=20
REDIS_SESSION_TTL=86400
REDIS_PROFILE_TTL=3600
REDIS_DRAFT_TTL=7200
REDIS_LLM_RESPONSE_TTL=1800

# ============================================================================
# CHROMADB - Railway Deployment
# ============================================================================
ENABLE_CHROMADB=true
CHROMADB_USE_SERVER=false
CHROMADB_PERSIST_DIR=/app/data/chromadb
CHROMADB_COLLECTION_NAME=email_contexts
CHROMADB_ALLOW_RESET=false
CHROMADB_ANONYMIZED_TELEMETRY=false

# ============================================================================
# MONGODB - Use Railway MongoDB or MongoDB Atlas
# ============================================================================
ENABLE_MONGODB=false
# If using MongoDB, set connection string in Railway
MONGODB_CONNECTION_STRING=your_mongodb_connection_string
MONGODB_DATABASE=email_generator

# ============================================================================
# GMAIL INTEGRATION - Production
# ============================================================================
ENABLE_GMAIL=true
GMAIL_CREDENTIALS_FILE=/app/config/gmail_credentials.json
GMAIL_TOKEN_FILE=/app/data/gmail_token.pickle
GMAIL_SCOPES=["https://www.googleapis.com/auth/gmail.send","https://www.googleapis.com/auth/gmail.modify","https://www.googleapis.com/auth/gmail.readonly"]

# ============================================================================
# OAUTH - Update redirect URIs for Railway domain
# ============================================================================
ENABLE_OAUTH=true

# Google OAuth - Update these with your Railway URLs
ENABLE_GOOGLE_OAUTH=true
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://your-frontend.railway.app/oauth/callback
GOOGLE_OAUTH_SCOPES=["openid","email","profile","https://www.googleapis.com/auth/gmail.send"]

# GitHub OAuth (Optional)
ENABLE_GITHUB_OAUTH=false
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=https://your-frontend.railway.app/oauth/github/callback
GITHUB_OAUTH_SCOPES=["user:email","read:user"]

# Microsoft OAuth (Optional)
ENABLE_MICROSOFT_OAUTH=false
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_REDIRECT_URI=https://your-frontend.railway.app/oauth/microsoft/callback
MICROSOFT_TENANT=common
MICROSOFT_OAUTH_SCOPES=["openid","profile","email","https://graph.microsoft.com/Mail.Send"]

# ============================================================================
# MCP Configuration
# ============================================================================
ENABLE_MCP=false
DISABLE_MCP=true

# ============================================================================
# Feature Toggles
# ============================================================================
DISABLE_REDIS=false
DISABLE_CHROMADB=false
DISABLE_MONGODB=true
DISABLE_GMAIL=false
DISABLE_OAUTH=false
DISABLE_AUTH=false

# ============================================================================
# Observability (Optional)
# ============================================================================
ENABLE_LANGSMITH=false
LANGCHAIN_TRACING_V2=false
LANGCHAIN_PROJECT=email-generator
LANGSMITH_API_KEY=your_langsmith_api_key

# ============================================================================
# Rate Limiting
# ============================================================================
ENABLE_COST_TRACKING=true
ENABLE_RATE_LIMITER=true
REQUESTS_PER_MINUTE=60
TOKENS_PER_MINUTE=120000
